{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@okudai/moqrtc-js",
  "version": "0.1.0",
  "exports": {
    ".": "./src/index.ts"
  },
  "license": "MIT",
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "lib": ["ESNext", "deno.ns", "DOM", "dom.iterable", "dom.asynciterable"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "verbatimModuleSyntax": false
  },
  "imports": {
    "@okudai/moq": "jsr:@okudai/moq@^0.4.0",
    "golikejs": "jsr:@okudai/golikejs@^0.5.2",
    "zod": "https://esm.sh/zod@3.23.8",
    "@std/assert": "jsr:@std/assert@^1",
    "@std/path": "jsr:@std/path@^1",
    "@std/testing": "jsr:@std/testing@^1"
  },
  "tasks": {
    "test": "deno test --allow-all",
    "test:watch": "deno test --allow-all --watch",
    "coverage": "deno test --allow-all --coverage=cov && deno coverage cov",
    "coverage:html": "deno test --allow-all --coverage=cov && deno coverage --html cov",
    "coverage:lcov": "deno test --allow-all --coverage=cov && deno coverage --lcov cov",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "lint": "deno lint",
    "check": "deno check src/**/*.ts"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 100,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["src/"]
  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["require-await", "no-unused-vars", "no-explicit-any", "no-await-in-sync-fn", "no-redeclare"]
    }
  },
  "exclude": [
    ".git",
    "dist/",
    "node_modules/",
    "cov/"
  ],
  "test": {
    "include": ["src/**/*_test.ts"]
  }
}
