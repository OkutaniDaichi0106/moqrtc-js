{
  "name": "moqrtc-ts",
  "version": "0.1.0",
  "description": "TypeScript implementation of a real-time communication protocol over Media over QUIC (MOQ)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "moq",
    "quic",
    "real-time",
    "media",
    "streaming",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jsdom": "^27.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.0",
    "typescript": "^5.9.3",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OkutaniDaichi0106/moqrtc-js.git"
  },
  "bugs": {
    "url": "https://github.com/OkutaniDaichi0106/moqrtc-js/issues"
  },
  "homepage": "https://github.com/OkutaniDaichi0106/moqrtc-js#readme",
  "packageManager": "pnpm@10.18.3",
  "dependencies": {
    "golikejs": "^0.4.0",
    "zod": "^4.1.12"
  }
}
